<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/colorPrimary"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="21dp"
        android:paddingTop="12dp">

        <ImageView
            android:layout_width="97dp"
            android:layout_height="97dp"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:background="@drawable/nav_logo_bkg"
            android:padding="1dp"
            android:src="@drawable/leftnav512x512" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="4dp"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="14dp"
                android:layout_marginStart="14dp"
                app:srcCompat="@drawable/ic_logopt" />

            <TextView
                android:id="@+id/nav_header_version"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="14dp"
                android:layout_marginStart="14dp"
                android:alpha=".6"
                android:text="Version 3.0.0"
                android:textAppearance="?android:attr/textAppearance"
                android:textSize="11sp" />

            <Button
                android:id="@+id/nav_header_site"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_launch_wrapped"
                android:drawablePadding="8dp"
                android:drawableStart="@drawable/ic_launch_wrapped"
                android:ellipsize="end"
                android:gravity="start|center_vertical"
                android:maxLines="1"
                android:text="www.popcorn-time.to"
                android:textAllCaps="false" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="4dp">

                <ImageButton
                    android:id="@+id/nav_header_facebook"
                    style="@style/Widget.AppCompat.ActionButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="0dp"
                    app:srcCompat="@drawable/ic_facebook" />

                <ImageButton
                    android:id="@+id/nav_header_twitter"
                    style="@style/Widget.AppCompat.ActionButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="0dp"
                    app:srcCompat="@drawable/ic_twitter" />

                <ImageButton
                    android:id="@+id/nav_header_youtube"
                    style="@style/Widget.AppCompat.ActionButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="0dp"
                    app:srcCompat="@drawable/ic_youtube" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/v3_navigation_list_divider" />
</LinearLayout>
