<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/vpn_security_recommendation_bkg"
    android:elevation="8dp"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="8dp">

    <ImageView
        android:id="@+id/vpn_alert_icon"
        android:layout_width="92dp"
        android:layout_height="92dp"
        android:layout_gravity="top|start"
        android:contentDescription="@string/security_recommendation"
        android:padding="4dp"
        android:src="@drawable/ic_warning" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginStart="24dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/vpn_security_recommendation_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/security_recommendation"
            android:textAllCaps="true"
            android:textColor="?android:attr/textColorPrimary"
            android:textSize="22sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/vpn_security_recommendation_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            android:text="@string/security_recommendation_msg"
            android:textColor="?android:attr/textColorPrimary"
            android:textSize="14sp" />

        <Button
            android:id="@+id/turn_on_vpn"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|start"
            android:drawableLeft="@drawable/ic_activate_vpn"
            android:drawablePadding="8dp"
            android:drawableStart="@drawable/ic_activate_vpn"
            android:paddingBottom="8dp"
            android:paddingLeft="24dp"
            android:paddingRight="24dp"
            android:paddingTop="8dp"
            android:stateListAnimator="@null"
            android:text="@string/turn_on_vpn"
            android:textColor="?android:attr/textColorPrimary"
            android:textSize="16sp"
            android:textStyle="bold" />
    </LinearLayout>
</LinearLayout>